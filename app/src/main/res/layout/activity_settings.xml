<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:navigationIcon="@drawable/left_arrow"
            android:navigationIcon="@drawable/left_arrow"
            app:titleTextColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/login_btn_drawable"/>

    </android.support.design.widget.AppBarLayout>
<LinearLayout
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:weightSum="1"
    android:padding="10dp"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:text="B"
            android:id="@+id/charText"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:background="@drawable/circle_back"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/username"
            android:layout_marginTop="5dp"
            android:text="Bharat Arora"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_dark_color"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <TextView
            android:id="@+id/useremail"
            android:text="arorabharat2011@gmail.com"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text_light_color"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <Switch
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sync Call Logs"
            android:checked="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>


        <Switch
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:checked="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Notifications"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <View
            android:layout_marginTop="20dp"
            android:background="@color/scale_back"
            android:layout_height="1dp"
            android:layout_width="match_parent"/>

        <TextView
            android:drawableRight="@drawable/rightarrow"
            android:drawableTint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:text="Edit Profile"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <TextView
            android:drawableRight="@drawable/rightarrow"
            android:drawableTint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:text="Change Password"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <View
            android:layout_marginTop="20dp"
            android:background="@color/scale_back"
            android:layout_height="1dp"
            android:layout_width="match_parent"/>


        <LinearLayout
            android:orientation="vertical"
            android:gravity="bottom|center"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <Button
                android:id="@+id/signout"
                android:text="SIGN OUT"
                android:layout_height="40dp"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/version"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_dark_color"
                android:text="Version 1.8.2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
    </android.support.design.widget.CoordinatorLayout>